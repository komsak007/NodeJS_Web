<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title></title>
</head>

<body>
  <%- include('../layout') %>
  <div class="container">
    <h2 align="center">Hello: <%= instructor.fname %></h2>
    <br>
    <h5>My Class</h2>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Class ID</th>
          <th scope="col">Class Name</th>
          <th scope="col">View Lesson</th>
          <th scope="col">Add Lesson</th>
        </tr>
      </thead>
      <tbody>
        <% if(instructor.classes) {%>
        <% for(var result of instructor.classes) { %>
        <tr>
          <td><%= result.class_id %></td>
          <td><%= result.class_title %></td>
          <td><a href="/classes/<%= result.class_id %>/lesson" class="btn btn-success">View Lesson</a></td>
          <td><a href="/instructors/classes/<%= result.class_id %>/lesson/new" class="btn btn-primary">Add Lesson</a></td>
        </tr>
        <% } %>
        <% } %>
      </tbody>
    </table>
    <br>
    <h5>Add Class</h2>
      <hr>
      <form class="form-group" action="/classes/register" method="post">
        <div class="form-group">
          <label for="">รหัสวิชา</label>
          <input type="text" name="class_id" class="form-control" value="">
        </div>
        <div class="form-group">
          <label for="">ชื่อคลาส</label>
          <input type="text" name="class_name" class="form-control" value="">
        </div>
        <div class="form-group">
          <label for="">คำอธิบายรายวิชา</label>
          <textarea name="description" rows="8" cols="80" class="form-control"></textarea>
        </div>
        <input type="hidden" name="instructor" value="<%= instructor.fname %>">
        <input type="submit" name="" class="btn btn-primary" value="สร้างรายวิชา">
      </form>
  </div>
</body>

</html>
