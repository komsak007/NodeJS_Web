<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title></title>
</head>

<body>
  <%- include('../layout') %>
  <div class="container">
    <h2 align="center">Hello: <%= student.fname %></h2>
    <br>
    <h5>My Class</h2>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Class ID</th>
          <th scope="col">Class Name</th>
          <th scope="col">View Lesson</th>
        </tr>
      </thead>
      <tbody>
        <% if(student.classes) {%>
        <% for(var result of student.classes) { %>
        <tr>
          <td><%= result.class_id %></td>
          <td><%= result.class_title %></td>
          <td><a href="/classes/<%= result.class_id %>/lesson" class="btn btn-success">View Lesson</a></td>
          <td><a href="/instructors/classes/<%= result.class_id %>/lesson/new" class="btn btn-primary">Add Lesson</a></td>
        </tr>
        <% } %>
        <% } %>
      </tbody>
    </table>
  </div>
</body>

</html>
