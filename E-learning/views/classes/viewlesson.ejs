<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title></title>
</head>

<body>
  <%- include('../layout') %>
  <div class="container">
    <h2 align="center">Lesson: <%= className.title %></h2>
    <br>
    <h5>My Class</h5>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Lesson ID</th>
          <th scope="col">Lesson Name</th>
          <th scope="col">Lesson description</th>
          <th scope="col">View Lesson</th>
        </tr>
      </thead>
      <tbody>
        <% if(className.lesson) {%>
        <% for(var result of className.lesson) { %>
        <tr>
          <td><%= result.lesson_number %></td>
          <td><%= result.lesson_title %></td>
          <td><%= result.lesson_body %></td>
          <td><a href="/classes/<%= className.class_id %>/lesson/<%= result.lesson_number %>" class="btn btn-primary">View Lesson</a></td>
        </tr>
        <% } %>
        <% } %>
      </tbody>
    </table>
    <br>
  </div>
</body>

</html>
