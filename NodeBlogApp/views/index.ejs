<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title></title>
</head>

<body>
  <%- include('layout') %>
  <div class="container">
    <% posts.forEach(function(post){ %>
    <h2><%= post.title %></h2>
    <img src="<%= post.img %>" alt="" width="600px" height="400px">
    <p> <%= post.content %></p>
    <hr>
    <% }) %>
  </div>
</body>

</html>
